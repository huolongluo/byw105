<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape android:innerRadiusRatio="4"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">
        <gradient android:centerColor="@color/color_3e3f65"
            android:centerY="0.50"
            android:endColor="@color/color_565781"
            android:startColor="@color/color_2b2c54"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>