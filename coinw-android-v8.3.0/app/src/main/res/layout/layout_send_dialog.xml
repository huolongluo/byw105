<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.5"/>

    <RelativeLayout
        android:id="@+id/llSuccessBoard"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/edit_add_bg"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tvPromptMsg"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/setbz"
            android:textColor="@color/FF888888"
            android:background="@drawable/text1_bg"
            android:textSize="12sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPromptMsg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_info"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/FF333333"
                android:singleLine="true"
                android:textSize="16sp"
                android:text=""
                android:background="@null"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#a0a0a0"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/btnCancle"
                    android:layout_width="127dp"
                    android:layout_height="30dp"
                    android:text="@string/cancle"
                    android:gravity="center"
                    android:background="@drawable/edit_dialog_cancal"
                    android:textColor="@color/FF333333"
                    android:textSize="11sp"/>


                <TextView
                    android:id="@+id/btnSure"
                    android:layout_width="127dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/save"
                    android:background="@drawable/edit_dialog_ok"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>