<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="500dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/title_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/include"
                        layout="@layout/base_title"></include>

                    <LinearLayout
                        android:id="@+id/btRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/history_iv"
                            android:layout_width="18dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@id/des"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/history_record" />

                        <TextView
                            android:id="@+id/des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            android:text="@string/a35"
                            android:textColor="#8881A6"
                            android:textSize="13sp" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="账户划转"
                    android:textColor="@color/ff333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="93dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/otctransfer_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="46dp"

                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="@string/a25"
                                    android:textColor="@color/ff333333"
                                    android:textSize="24dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:visibility="invisible">

                                    <LinearLayout

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:lines="1"
                                            android:text="@string/b48"
                                            android:textColor="@color/ff333333"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:lines="1"
                                            android:text="26987.26 CNY"
                                            android:textColor="@color/ff6f6699"
                                            android:textSize="12sp" />


                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="7dp"
                                        android:layout_height="11dp"
                                        android:layout_marginRight="11dp"
                                        android:src="@mipmap/arrow" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/ffe8e7ed"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="46dp"

                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="@string/a26"
                                    android:textColor="@color/ff333333"
                                    android:textSize="24dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:visibility="invisible">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"
                                        android:text="币币账户"
                                        android:textColor="@color/ff333333"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"
                                        android:text="26987.26 CNY"
                                        android:textColor="@color/ff6f6699"
                                        android:textSize="12sp" />


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/output_ll"
                                android:layout_width="match_parent"
                                android:layout_height="46dp"

                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="@string/a25"
                                    android:textColor="@color/ff333333"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <LinearLayout

                                        android:layout_width="210dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tit1_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:lines="1"
                                            android:text="@string/a24"
                                            android:textColor="@color/ff333333"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/fabi_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:lines="1"
                                            android:text="**"
                                            android:textColor="@color/ff6f6699"
                                            android:textSize="12sp" />


                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="7dp"
                                        android:layout_height="11dp"
                                        android:layout_marginRight="11dp"
                                        android:src="@mipmap/arrow"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/ffe8e7ed"></View>

                            <LinearLayout
                                android:id="@+id/input_ll"
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="@string/a26"
                                    android:textColor="@color/ff333333"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />

                                <LinearLayout

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tit2_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"
                                        android:text="@string/a27"
                                        android:textColor="@color/ff333333"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/bibi_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"
                                        android:text="**"
                                        android:textColor="@color/ff6f6699"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="7dp"
                                    android:layout_height="11dp"
                                    android:layout_marginRight="11dp"
                                    android:src="@mipmap/arrow" />
                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/switch_rl"
                        android:layout_width="66dp"
                        android:layout_height="93dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/otctransfer_bg1">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/switchc" />

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/warn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/tan_"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textColor="#FFFF6D6D"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="29dp"
                    android:text="@string/a28"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/selectCoin_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/coinName_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:text="**"
                        android:textColor="@color/ff333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/icon_right" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@color/ffe8e7ed"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="17dp"
                    android:text="@string/a29"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/amount_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="@string/a30"
                        android:inputType="numberDecimal"
                        android:textColor="@color/ff333333"
                        android:textColorHint="#ADB0AFB7"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/coinName_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/ffb0adc2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/all_tv"
                        android:layout_width="50dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/otctransfer_bg2"
                        android:gravity="center"
                        android:text="@string/a31"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@color/ffe8e7ed"></View>

                <TextView
                    android:id="@+id/canUse_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/qa13"
                    android:textColor="@color/ffb0adc2" />

                <TextView
                    android:id="@+id/balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/grant_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/otc_transfer_bg3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/warn_des1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minLines="2"
                        android:paddingLeft="20dp"
                        android:paddingRight="17dp"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/warn_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="17dp"
                        android:paddingBottom="10dp"
                        android:text=""
                        android:textColor="@color/ffff6d6d"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/confirm_jb_bg"
            android:gravity="center"
            android:text="@string/a34"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</layout>