<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/include"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/base_col">

            <ImageButton
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:paddingLeft="14dp"
                android:paddingTop="4dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/back" />


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20" />

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/right_contact"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/contact1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/img"
                    android:text="@string/y9"
                    android:textColor="@color/white"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:id="@+id/dot"
                    android:visibility="gone"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_alignTop="@id/img"
                    android:layout_alignRight="@id/img"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/notify"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="6sp" />
            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/base_col"
            android:orientation="vertical">

            <ImageView
                android:layout_width="46.5dp"
                android:layout_height="46.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp"
                android:src="@mipmap/otccancle_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:text="@string/y10"
                android:textColor="@color/white"
                android:textSize="18sp"

                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="@string/y11"
                        android:textColor="@color/ffb0adc2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/orderId_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#---"
                        android:textColor="@color/ffb0adc2"

                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/copy_iv1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="17dp"
                        android:src="@mipmap/cope_c" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/fff0eef6"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:id="@+id/tradeType_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/z1"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="6.5dp"
                            android:layout_height="11.5dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/userName_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:text="----"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ddje"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:text="--- CNY"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/danjia"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:text="--- CNY"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:text="---"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/paymark"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/copy_iv2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:src="@mipmap/copy"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/transReferNum_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:text="----"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ordertime"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/createTime_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp"
                            android:text="--"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>