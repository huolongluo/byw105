<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/fff0f1f6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/head_tv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="17dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/coinName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="BTC"
                android:textColor="#6F6699"
                android:textSize="18sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:text="@string/b96"
                android:textColor="#B0ADC2"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:text="@string/xg"
                android:textColor="@color/ffb0adc2"
                android:textSize="11.5sp" />
            <TextView
                android:id="@+id/limit_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/tv1"
                android:text="2000-3000"
                android:textColor="@color/ff8881a6"
                android:textSize="11.5sp" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/number"
                android:textColor="@color/ffb0adc2"
                android:textSize="11.5sp" />
            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv2"
                android:text="3000"
                android:textColor="@color/ff8881a6"
                android:textSize="11.5sp" />
            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="37dp"
                android:layout_marginRight="16dp"
                android:text="16987.26 CNY"
                android:textColor="#6F6699"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="21dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bank_iv"
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/bank_cark" />
                <ImageView
                    android:id="@+id/alipay_iv"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/zfb" />
                <ImageView
                    android:id="@+id/wechat_iv"
                    android:layout_width="23dp"
                    android:layout_height="18.5dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/wx" />
            </LinearLayout>
            <Button
                android:id="@+id/btStartSell"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="17dp"
                android:background="@drawable/black_bg_xj"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/unPublish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/bt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/black_bg_xj"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/str_edit"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/bt_putaway"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/black_bg_xj"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/shelves_1"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/bt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/black_bg_xj"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:paddingStart="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/delete"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/fff0f1f6" />
</LinearLayout>