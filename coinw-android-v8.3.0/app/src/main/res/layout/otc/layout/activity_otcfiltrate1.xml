<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/include"
            layout="@layout/base_title"></include>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:text="@string/y1"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@mipmap/yyk_bg"
                android:id="@+id/bank_tv"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/otcfiltrare_bg2"
                android:gravity="center"
                android:text="@string/y2"
                android:textColor="@color/ff68628A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alipay_tv"
                android:drawableLeft="@mipmap/zfb_bg"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/otcfiltrare_bg2"
                android:gravity="center"
                android:text="@string/y3"
                android:textColor="@color/ff6D6A7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wechat_tv"
                android:drawableLeft="@mipmap/wx_bg"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/otcfiltrare_bg2"
                android:gravity="center"
                android:text="@string/y4"
                android:textColor="@color/ff6D6A7C"
                android:textSize="14sp"
                android:layout_marginLeft="19dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:text="@string/y5"
            android:textColor="@color/black"
            android:textSize="13sp" />


         <EditText
             android:id="@+id/target_et"
             android:layout_width="match_parent"
             android:layout_height="43dp"
             android:background="@color/transparent"
             android:layout_marginLeft="17dp"
             android:layout_marginRight="17dp"
             android:inputType="numberDecimal"
             android:textColorHint="@color/ffB4B1C3"
             android:hint="@string/y6"
             android:textSize="14sp"
             android:paddingLeft="3dp"
             android:textColor="@color/ff333333"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/ffE8E7ED"></View>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ffdbdbea"
            android:gravity="center"
            android:text="@string/y7"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ff6f6699"
            android:gravity="center"
            android:text="@string/y8"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>