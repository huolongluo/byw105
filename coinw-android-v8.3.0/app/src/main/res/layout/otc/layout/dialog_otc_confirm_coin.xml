<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cor10_solid_white"
    android:paddingBottom="@dimen/dp_size_30">
    <TextView android:id="@+id/tv1"
        style="@style/TextView_18_000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/confirm_coin"
        android:drawableTop="@mipmap/ic_confirm_coin"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_28"/>
    <TextView android:id="@+id/tv2"
        style="@style/TextView_14_B0ADC2"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:text="@string/confirm_coin_content"
        android:layout_marginStart="@dimen/dp_size_48"
        android:layout_marginEnd="@dimen/dp_size_48"/>
    
    <LinearLayout android:id="@+id/llAgree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:paddingTop="@dimen/dp_size_8"
        android:paddingBottom="@dimen/dp_size_8"
        android:layout_marginStart="@dimen/dp_size_32"
        android:layout_marginEnd="@dimen/dp_size_32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2">
        <ImageView android:id="@+id/ivAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_agree_select_6f6699"/>
        <TextView
            style="@style/TextView_12_6F698B"
            android:text="@string/confirm_coin_agree"
            android:layout_marginLeft="@dimen/dp_size_8"/>
    </LinearLayout>
    <TextView android:id="@+id/tvCancel"
        style="@style/TextView_14_6f6699"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_size_45"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_size_26"
        android:layout_marginStart="@dimen/dp_size_32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAgree"
        app:layout_constraintEnd_toStartOf="@+id/tvSure"
        android:background="@drawable/cor22_stroke1_6f6699"
        android:text="@string/cancle"/>
    <TextView android:id="@+id/tvSure"
        style="@style/TextView_14_white"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_size_45"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_size_26"
        android:layout_marginEnd="@dimen/dp_size_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCancel"
        app:layout_constraintTop_toBottomOf="@+id/llAgree"
        android:enabled="false"
        android:background="@drawable/sl_cor22_enable_6f6699"
        android:layout_marginStart="@dimen/dp_size_16"
        android:text="@string/cc31"/>
</androidx.constraintlayout.widget.ConstraintLayout>