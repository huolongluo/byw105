<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical">
            <include
                android:id="@+id/include"
                layout="@layout/base_title1"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ff262046"
                android:paddingTop="8dp"
                android:paddingBottom="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tradeall"
                        android:textColor="@color/ffa9a4c0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/amount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 CNY"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="13.5dp"
                            android:layout_height="13.5dp"
                            android:layout_marginRight="3dp"
                            android:src="@mipmap/clock" />
                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nopay"
                            android:textColor="#ff8787"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/timeLimit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="00分00秒"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/paytype"
                    android:textColor="@color/ff333333"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/charge_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:text="**"
                    android:textColor="@color/ff333333"
                    android:textSize="13sp" />
                <ImageView
                    android:id="@+id/pay_iv"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="5.5dp"
                    android:layout_toLeftOf="@+id/charge_type_tv"
                    android:src="@mipmap/bank_cark" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/fff0eef6"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="26dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sellname"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/copy_iv1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@mipmap/copy" />
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/copy_iv1"
                    android:text="** **"
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/accountTit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_number"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/copy_iv2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:src="@mipmap/copy" />
                <TextView
                    android:id="@+id/account_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/copy_iv2"
                    android:text="**** ****"
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bankName_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/v3"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/copy_iv4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:src="@mipmap/copy" />
                <TextView
                    android:id="@+id/bankName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/copy_iv4"
                    android:text="**** ****"
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bankaddr_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/v4"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/copy_iv5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:src="@mipmap/copy" />
                <TextView
                    android:id="@+id/bankaddr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/copy_iv5"
                    android:lines="1"
                    android:text="**** ****"
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_name"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17.5dp"
                    android:text="中国人民银行"
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/qrCode_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/v5"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17.5dp"
                    android:src="@mipmap/otc_qr" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paymark"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/copy_iv3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:src="@mipmap/copy" />
                <TextView
                    android:id="@+id/transReferNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/copy_iv3"
                    android:text="****"
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/v6"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/adRemark_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="17dp"
                    android:layout_toRightOf="@id/bz"
                    android:text=""
                    android:textColor="@color/ff333333"
                    android:textSize="12sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#fffdf2f4"
                android:minHeight="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="14.5dp"
                    android:layout_height="14.5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="19.5dp"
                    android:src="@mipmap/gth" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/v7"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 00分00秒"
                            android:textColor="@color/ffff6d6d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/v8"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/totalAmount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0000 CNY"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paynot"
                        android:textColor="@color/ffff6d6d"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">
            <RelativeLayout
                android:id="@+id/callPhone_Ll"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/otcprepaid_bg2"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/contact" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/img"
                    android:text="@string/v9"
                    android:textColor="#747281"
                    android:textSize="13sp"></TextView>
                <TextView
                    android:id="@+id/dot"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_alignTop="@id/img"
                    android:layout_alignRight="@id/img"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/notify"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="6sp"
                    android:visibility="gone" />
            </RelativeLayout>
            <TextView
                android:id="@+id/nonPayment_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/ffA1A1C9"
                android:gravity="center"
                android:text="@string/w1"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/coinfirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/ff6F679A"
                android:gravity="center"
                android:text="@string/paywc"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/qrcode_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:background="@color/base_bg_white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/v5"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <ImageView
                        android:id="@+id/qr_code_iv"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:maxHeight="200dp"
                        android:scaleType="centerInside" />
                    <TextView
                        android:id="@+id/saveqrcode_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="9dp"
                        android:text="@string/a22"
                        android:textColor="#5D5D76"
                        android:textSize="12sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/qr_codeclose_iv"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="70dp"
                    android:src="@mipmap/otc_qecode_logo" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>