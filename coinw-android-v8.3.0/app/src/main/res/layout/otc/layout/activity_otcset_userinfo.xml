<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_white"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/base_col" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="-3dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:id="@+id/include"
                layout="@layout/base_title" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/head_tv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/otcname_bg2"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/et_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/head_tv"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <LinearLayout
                    android:id="@+id/sellshop_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="27dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/l5"
                        android:textColor="@color/ff8881a6"
                        android:textSize="13sp" />
                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="7dp"
                        android:src="@mipmap/xiangyou" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/login_bg">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rl_now_psw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="22.5dp"
                                android:text="@string/l6"
                                android:textColor="@color/ff222222"
                                android:textSize="13sp" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/et_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:layout_marginLeft="16.5dp"
                                    android:layout_marginTop="11dp"
                                    android:layout_marginRight="16.5dp"
                                    android:background="@drawable/set_trade_psw_"
                                    android:hint="@string/l7"
                                    android:lines="1"
                                    android:maxLength="50"
                                    android:paddingLeft="4.5dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/ffafafaf"
                                    android:textSize="13sp" />
                                <TextView
                                    android:id="@+id/emailStatus_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="11dp"
                                    android:layout_marginRight="17dp"
                                    android:text="已绑定"
                                    android:textColor="@color/ff8d8d8d"
                                    android:textSize="13sp" />
                                <View
                                    android:id="@+id/email_rl"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:visibility="gone"></View>
                            </RelativeLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="22.5dp"
                            android:text="@string/l8"
                            android:textColor="@color/ff222222"
                            android:textSize="13sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_marginLeft="16.5dp"
                                android:layout_marginTop="11dp"
                                android:layout_marginRight="16.5dp"
                                android:background="@drawable/set_trade_psw_"
                                android:hint="@string/l9"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="30"
                                android:paddingLeft="4.5dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/ffafafaf"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/phoneStatus_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="11dp"
                                android:layout_marginRight="17dp"
                                android:text="@string/l10"
                                android:textColor="@color/ff8d8d8d"
                                android:textSize="13sp" />
                            <View
                                android:id="@+id/phone_rl"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:visibility="gone"></View>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="22.5dp"
                            android:text="@string/n1"
                            android:textColor="@color/ff222222"
                            android:textSize="13sp" />
                        <EditText
                            android:id="@+id/et_wechat"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginLeft="16.5dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="16.5dp"
                            android:background="@drawable/set_trade_psw_"
                            android:hint="@string/n2"
                            android:lines="1"
                            android:maxLength="30"
                            android:paddingLeft="4.5dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/ffafafaf"
                            android:textSize="13sp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="22.5dp"
                                android:text="@string/n3"
                                android:textColor="@color/ff222222"
                                android:textSize="13sp" />
                            <EditText
                                android:id="@+id/et_zhifub"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="16.5dp"
                                android:layout_marginRight="9dp"
                                android:layout_toLeftOf="@+id/tv_getCode"
                                android:background="@drawable/set_trade_psw_"
                                android:hint="@string/n4"
                                android:lines="1"
                                android:maxLength="30"
                                android:paddingLeft="4.5dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/ffafafaf"
                                android:textSize="13sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_google"
                            android:layout_width="match_parent"
                            android:layout_height="70dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="22.5dp"
                                android:text="@string/n5"
                                android:textColor="@color/ff222222"
                                android:textSize="13sp" />
                            <EditText
                                android:id="@+id/et_Whatsapp"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="16.5dp"
                                android:layout_marginRight="9dp"
                                android:layout_toLeftOf="@+id/googleCode"
                                android:background="@drawable/set_trade_psw_"
                                android:hint="@string/n6"
                                android:lines="1"
                                android:paddingLeft="4.5dp"
                                android:paddingBottom="3dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textColorHint="@color/ffafafaf"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="22.5dp"
                            android:text="@string/n7"
                            android:textColor="@color/ff222222"
                            android:textSize="13sp" />
                        <EditText
                            android:id="@+id/et_Telegram"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginLeft="16.5dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="16.5dp"
                            android:background="@drawable/set_trade_psw_"
                            android:hint="@string/n8"
                            android:lines="1"
                            android:maxLength="30"
                            android:paddingLeft="4.5dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/ffafafaf"
                            android:textSize="13sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="22.5dp"
                            android:text="@string/n9"
                            android:textColor="@color/ff222222"
                            android:textSize="13sp" />
                        <EditText
                            android:id="@+id/et_Skype"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginLeft="16.5dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="16.5dp"
                            android:background="@drawable/set_trade_psw_"
                            android:hint="@string/n10"
                            android:lines="1"
                            android:maxLength="30"
                            android:paddingLeft="4.5dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/ffafafaf"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/btn_save"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/confirm_jb_bg"
                            android:gravity="center"
                            android:text="@string/o1"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>