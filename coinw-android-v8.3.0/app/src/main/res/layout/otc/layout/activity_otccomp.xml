<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_bg_white"
            android:orientation="vertical">
            <include
                android:id="@+id/include"
                layout="@layout/base_title"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/base_col"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="46.5dp"
                    android:layout_height="46.5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11dp"
                    android:src="@mipmap/order_complate" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="17dp"
                    android:text="@string/w2"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="@string/w3"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/orderId_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#----"
                            android:textColor="@color/ff333333"
                            android:textSize="12sp" />
                        <ImageView
                            android:id="@+id/copy_iv1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="17dp"
                            android:src="@mipmap/copy" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/pay_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/w4"
                            android:textColor="@color/ffb0adc2"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/bank_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="17dp"
                            android:layout_toLeftOf="@+id/real_name"
                            android:text="--"
                            android:textColor="@color/ff333333"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/real_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="17dp"
                            android:text="--"
                            android:textColor="@color/ff333333"
                            android:textSize="13sp" />
                        <ImageView
                            android:id="@+id/pay_iv"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="5.5dp"
                            android:layout_toLeftOf="@+id/bank_num"
                            android:src="@mipmap/bank_cark" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/fff0eef6"
                        android:visibility="gone"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ddje"
                                android:textColor="@color/ffb0adc2"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/amount_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="18dp"
                                android:text="-- CNY"
                                android:textColor="@color/ff6f6699"
                                android:textSize="16sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/danjia"
                                android:textColor="@color/ffb0adc2"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/price_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="18dp"
                                android:text="** CNY"
                                android:textColor="@color/ff333333"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/number"
                                android:textColor="@color/ffb0adc2"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="18dp"
                                android:text="-- CNYT"
                                android:textColor="@color/ff333333"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paymark"
                                android:textColor="@color/ffb0adc2"
                                android:textSize="12sp" />
                            <ImageView
                                android:id="@+id/copy_iv2"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="18dp"
                                android:src="@mipmap/copy" />
                            <TextView
                                android:id="@+id/transReferNum_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/copy_iv2"
                                android:text="----"
                                android:textColor="@color/ff333333"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="30dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ordertime"
                                android:textColor="@color/ffb0adc2"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/createTime_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="18dp"
                                android:text="--"
                                android:textColor="@color/ff333333"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/ff32ad5d"></View>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/f1432ad5d">
                            <TextView
                                android:id="@+id/tishi_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/w5"
                                android:textColor="@color/ff32ad5d"
                                android:textSize="13.5sp" />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/ff32ad5d"></View>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/wran_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/base_bg_white"
                        android:paddingLeft="15dp"
                        android:paddingTop="3dp"
                        android:text=""
                        android:textColor="@color/ffb0adc2"
                        android:textSize="13sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="4dp">
            <RelativeLayout
                android:id="@+id/callPhone_Ll"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="2"
                android:background="@drawable/otcprepaid_bg2"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/contact" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img"
                    android:text="@string/w6"
                    android:textColor="#747281"
                    android:textSize="13sp"></TextView>
                <TextView
                    android:id="@+id/dot"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_alignTop="@id/img"
                    android:layout_alignRight="@id/img"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/notify"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="6sp"
                    android:visibility="gone" />
            </RelativeLayout>
            <TextView
                android:id="@+id/cancle_tv"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="2"
                android:background="@color/ffa1a1c9"
                android:gravity="center"
                android:text="@string/w7"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="3"
                android:background="@color/ff6f6699"
                android:gravity="center"
                android:text="@string/w8"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/ll"
            android:background="#E7E7F0"></View>
    </RelativeLayout>
</layout>