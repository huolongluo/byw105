<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_app_upgrading"
    android:paddingLeft="@dimen/dp_size_32"
    android:paddingTop="@dimen/dp_size_28"
    android:paddingRight="@dimen/dp_size_32"
    android:paddingBottom="@dimen/dp_20">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            style="@style/TextView_13_3C3C3C_bold"
            android:text="@string/upgrading" />

        <TextView
            android:id="@+id/tv_progress"
            style="@style/TextView_13_3C3C3C_bold"
            android:text="0%" />

        <TextView
            style="@style/TextView_13_3C3C3C_bold"
            android:text=")" />
    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar_horizontal"
        android:layout_marginTop="@dimen/dp_size_16"/>

    <TextView
        android:id="@id/versionchecklib_loading_dialog_cancel"
        style="@style/TextView_13_484C9B_bold"
        android:text="@string/upgrade_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_size_12"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"/>
</LinearLayout>