<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?window_background"
        android:orientation="vertical">

        <include layout="@layout/mc_sdk_view_tool_bar" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="?ic_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="@string/earn_buy_success"
            android:textColor="?col_text_title"
            android:layout_marginBottom="30dp"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="?space_line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_time_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/earn_time_limit"
                        android:textColor="?col_text_content"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_time_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?col_text_title"
                        android:textSize="14sp"
                        tools:text="10å¤©" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_buy_amount_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/earn_buy_amount"
                        android:textColor="?col_text_content"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?col_text_title"
                        android:textSize="14sp"
                        tools:text="100USDT" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_buy_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?col_text_title"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/earn_buy_amount"/>

                <LinearLayout
                    android:id="@+id/ll_buy_amount_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                </LinearLayout>


                <include
                    android:id="@+id/layout_earn_buy_rule"
                    layout="@layout/layout_earn_buy_rule" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </ScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_goto_earn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="?bg_action_btn_normal"
                android:text="@string/earn_goto_earn"
                android:textColor="?col_text_content" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_goto_wallet"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?bg_action_btn_accent"
                android:text="@string/earn_goto_wallet"
                android:textColor="?col_text_on_button" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            />


    </LinearLayout>
</layout>