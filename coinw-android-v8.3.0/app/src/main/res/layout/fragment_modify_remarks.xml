<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cortop10_solid_background_main"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_horizontal"
    android:paddingEnd="@dimen/margin_horizontal"
    android:paddingBottom="@dimen/dp_30">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_14"
        android:src="@drawable/ic_close" />
    <EditText android:id="@+id/etRemarks"
        style="@style/TextView_14_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@drawable/bg_cor3_background_gray"
        android:layout_marginTop="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_12"
        android:hint="@string/inpmark"
        android:textColorHint="@color/text_main2"/>
    <TextView
        android:id="@+id/tvSubmit"
        style="@style/TextView_14_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_cor3_accent"
        android:gravity="center"
        android:text="@string/confirm"/>
</LinearLayout>
