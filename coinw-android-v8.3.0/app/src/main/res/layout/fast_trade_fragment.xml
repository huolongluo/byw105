<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back"/>

        <LinearLayout
            android:layout_width="148dp"
            android:layout_height="31dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/otcc2c_bg3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/otc_select_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/trade_title1_otc"
                android:textColor="@color/ff918BAE"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/one_click_buy_select_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/otcc2c_bg2"
                android:gravity="center"
                android:text="@string/trade_title2"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
        <include
            layout="@layout/c2c_view_layout"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="17dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cnyt_c"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/market_custom_bg1"
                    android:gravity="center"
                    android:text="@string/buy_otc"
                    android:textColor="@color/white"
                    android:textSize="13.5sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_cnyt_t"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sell_otc"
                    android:textColor="@color/ffa9a4c0"
                    android:textSize="13.5sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/menu_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:paddingRight="17dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/three_dot" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/base_bg_white" />
    <RelativeLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/title_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/buy_amount"
            android:textColor="#222222"
            android:textSize="14sp" />
        <RelativeLayout
            android:id="@+id/ll_buy_money"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/title_head"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/iv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="¥"
                android:textColor="#1B1B1B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#1B1B1B"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_buy_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_unit"
                android:layout_toRightOf="@id/iv_money"
                android:background="#00000000"
                android:hint=""
                android:inputType="numberDecimal"
                android:lines="1"
                android:textColor="#1B1B1B"
                android:textSize="23sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ll_buy_money"
            android:layout_alignStart="@id/ll_buy_money"
            android:layout_alignEnd="@id/ll_buy_money"
            android:layout_marginBottom="5dp"
            android:background="@color/color_ecedf4" />
        <TextView
            android:id="@+id/des_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line"
            android:layout_alignStart="@id/ll_buy_money"
            android:text="--"
            android:textColor="#222222"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/buy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_line"
            android:layout_alignEnd="@id/ll_buy_money"
            android:drawableStart="@mipmap/exchang_ico"
            android:drawablePadding="3dp"
            android:text="@string/by_count"
            android:textColor="#564E84"
            android:textSize="11sp" />
        <RelativeLayout
            android:id="@+id/bt_commit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/des_price"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="#4E4883"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:drawableLeft="@drawable/quick_trade_confirm"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/buy_now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_commit"
            android:layout_alignStart="@id/ll_buy_money"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/free_ico" />
            <TextView
                android:id="@+id/serviceCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="@string/price_des"
                android:textColor="#908F9E"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_nologin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/coinw_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="请先登录后进行C2C操作"
            android:textColor="@color/F666666"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_bus_login"
            android:layout_width="@dimen/x360"
            android:layout_height="@dimen/y84"
            android:layout_gravity="center"
            android:layout_marginTop="53dp"
            android:background="@drawable/text_submit"
            android:gravity="center"
            android:text="@string/loginnow"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/text_size36" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_noC2C"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/coinw_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="29dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="请先进行身份验证后进行C2C操作"
            android:textColor="@color/F666666"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_C2C"
            android:layout_width="@dimen/x360"
            android:layout_height="@dimen/y84"
            android:layout_gravity="center"
            android:layout_marginTop="53dp"
            android:background="@drawable/text_submit"
            android:gravity="center"
            android:text="立即验证"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/text_size36" />
    </LinearLayout>
</LinearLayout>