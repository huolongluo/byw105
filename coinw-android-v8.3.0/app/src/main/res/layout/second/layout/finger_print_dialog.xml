<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/regist_dialog_shap"
            android:orientation="vertical">

                 <ImageView
                     android:id="@+id/result_iv"
                     android:layout_width="36dp"
                     android:layout_height="36dp"

                     android:src="@mipmap/zhiwen_suc"
                     android:layout_gravity="center_horizontal"
                     android:scaleType="fitCenter"
                     android:layout_marginTop="35dp"
                     />

            <TextView
                android:id="@+id/et_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv3"
               android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:gravity="bottom|center_horizontal"
                android:hint="@string/inp_markinfo"
                android:lines="1"
                android:text="Touch ID for “Coinw”"
                android:textColor="@color/ff222222"
                android:textColorHint="@color/ffb5b2c7"
                android:textSize="16.5sp" />


              <TextView
                  android:id="@+id/result_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                     android:textSize="12sp"
                  android:textColor="@color/ff8881a6"
                  android:text="@string/verify_prifent"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="13dp"
                  />

            <Button
                android:id="@+id/know_tv"
                android:layout_width="133dp"
                android:layout_height="36.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/login_bn_bg"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="@android:color/white"
                android:textSize="14sp"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/cancle_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="20dp"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guanbi"

            />
    </LinearLayout>

</LinearLayout>