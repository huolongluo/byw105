<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yramid_bg10">
    <RelativeLayout
        android:id="@+id/share_pc"
        android:layout_width="310dp"
        android:layout_height="550dp">
        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/qrCode_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@+id/imageview1"
            android:layout_alignBottom="@+id/imageview1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-4dp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/yramid_bg10" />
    <RelativeLayout
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageButton
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:paddingLeft="14dp"
                android:paddingTop="4dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/back" />
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20" />
            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="16dp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="37dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="17dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/share" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_below="@+id/title_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/jpjjr"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="53dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/pyramid_bg11"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/coinw_fyjh"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/proportion_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="28dp"
                        android:background="@drawable/pyramid_bg12"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:paddingRight="4dp"
                        android:text="10%"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pyramid" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/tjyz"
                android:textColor="#37eaff"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/yqtf"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/pyramid_bg1">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pyramid_bg2"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3.5dp"
                        android:layout_alignTop="@+id/tv1"
                        android:layout_alignBottom="@+id/tv1"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv1"
                        android:src="@mipmap/jt" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_alignLeft="@+id/tv1"
                        android:layout_marginTop="10dp"
                        android:maxEms="5"
                        android:text="@string/tsjyz"
                        android:textColor="#a49dc9"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pyramid_bg2"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3.5dp"
                        android:layout_alignTop="@+id/tv2"
                        android:layout_alignBottom="@+id/tv2"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv2"
                        android:src="@mipmap/jt" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_alignLeft="@+id/tv2"
                        android:layout_marginTop="10dp"
                        android:maxEms="5"
                        android:text="@string/pyram"
                        android:textColor="#a49dc9"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="16.5dp">
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/pyramid_bg2"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3.5dp"
                        android:layout_alignTop="@+id/tv3"
                        android:layout_alignBottom="@+id/tv3"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv3"
                        android:src="@mipmap/jt"
                        android:visibility="gone" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"
                        android:layout_alignLeft="@+id/tv3"
                        android:layout_marginTop="10dp"
                        android:maxEms="5"
                        android:text="@string/pyram1"
                        android:textColor="#a49dc9"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/pyramid_bg3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="11.5dp"
                        android:layout_height="11.5dp"
                        android:layout_marginLeft="8.5dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="9.5sp" />
                    <TextView
                        android:id="@+id/name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:text="**"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fany"
                        android:textColor="@color/ff706a90"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/number_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:text="-- CNYT"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#353151"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="11.5dp"
                        android:layout_height="11.5dp"
                        android:layout_marginLeft="8.5dp"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="9.5sp" />
                    <TextView
                        android:id="@+id/name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:text="**"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fany"
                        android:textColor="@color/ff706a90"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/number_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:text="-- CNYT"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#353151"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="11.5dp"
                        android:layout_height="11.5dp"
                        android:layout_marginLeft="8.5dp"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="9.5sp" />
                    <TextView
                        android:id="@+id/name_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:text="**"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fany"
                        android:textColor="@color/ff706a90"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/number_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:text="-- CNYT"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/isLogin_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/pyramid_bg4"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/button1_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tjfri"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/friendNum_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <View
                            android:id="@+id/view1"
                            android:layout_width="33dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/pyramid_bg5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/button2_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yhe"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/total_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <View
                            android:id="@+id/view2"
                            android:layout_width="33dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/pyramid_bg5"
                            android:visibility="invisible"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/ff3c3759"/>
                <huolongluo.byw.view.NoScrollViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="410dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26.5dp"
                    android:text="@string/tjm"
                    android:textColor="@color/ff706a90" />
                <LinearLayout
                    android:id="@+id/cope_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/uuid_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="000000"
                        android:textColor="@color/ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/copy" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/share_url"
                    android:layout_width="0dp"
                    android:layout_height="36.5dp"
                    android:layout_marginLeft="22.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/confirm_jb_bg"
                    android:gravity="center"
                    android:text="@string/invite_friend"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/share_image"
                    android:layout_width="0dp"
                    android:layout_height="36.5dp"
                    android:layout_marginLeft="15.5dp"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/share_act_bg1"
                    android:gravity="center"
                    android:text="@string/myhaibao"
                    android:textColor="@color/ff8881a6"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/no_login_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26.5dp"
                    android:text="@string/tjm"
                    android:textColor="@color/ff706a90" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="----"
                        android:textColor="@color/ff333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/share_url1"
                    android:layout_width="match_parent"
                    android:layout_height="36.5dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/confirm_jb_bg"
                    android:gravity="center"
                    android:text="@string/invite_friend"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>