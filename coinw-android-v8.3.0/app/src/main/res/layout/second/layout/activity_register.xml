<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_horizontal"
    android:paddingEnd="@dimen/margin_horizontal"
    android:orientation="vertical"
    android:background="@color/background_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/inc_login_title"/>
        <include layout="@layout/inc_login_phone_email"/>
        <TextView android:id="@+id/tvInvite"
            style="@style/TextView_12_main"
            android:text="@string/inviteco"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableRight="@mipmap/ic_triangle_down_gray"
            android:drawablePadding="@dimen/dp_6"/>
        <EditText
            android:id="@+id/etInvite"
            style="@style/TextView_14_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@null"
            android:hint="@string/input_invite_code"
            android:inputType="text"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColorHint="@color/text_main2"
            android:visibility="gone"/>
        <View android:id="@+id/vInvite"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/sl_color_normal_e0e0e0_selected_accent"
            android:visibility="gone"/>
        <include layout="@layout/inc_login_btn"/>
        <LinearLayout  android:id="@+id/llLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:paddingTop="@dimen/dp_10"
            
            >
            <TextView
                style="@style/TextView_14_main2"
                android:text="@string/coinw_account"/>
            <TextView
                style="@style/TextView_14_accent"
                android:text="@string/login"/>
        </LinearLayout>
    
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40">
        <TextView
            style="@style/TextView_12_main2"
            android:text="@string/register_agree"/>
        <TextView android:id="@+id/tvAgreement"
            style="@style/TextView_12_accent"
            android:text="@string/coinw_user_agreement"/>
    </LinearLayout>
    
</RelativeLayout>
