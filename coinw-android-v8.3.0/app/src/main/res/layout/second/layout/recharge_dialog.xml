<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="73dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/regist_dialog_shap"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:scrollbars="none"

                >

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="31dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/head_iv"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/default_head" />

                        <TextView
                            android:id="@+id/coinName_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="-- --"
                            android:textColor="@color/ff222222"
                            android:textSize="16.5sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rechager_addr"
                            android:textColor="@color/ff222222"
                            android:textSize="16.5sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/qr_bg">


                        <ImageView
                            android:id="@+id/qr_code_iv"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="1dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="-- --"
                        android:textColor="@color/ff222222"
                        android:textSize="14sp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        />
                       <TextView
                           android:id="@+id/main_tv"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/ffff5763"
                           android:text="@string/rec1"
                           android:textSize="12sp"
                           android:layout_gravity="center_horizontal"
                           android:visibility="gone"/>
                    <Button
                        android:id="@+id/cope_bn"
                        android:layout_width="106.5dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/login_bn_bg"
                        android:gravity="center"
                        android:text="@string/b83"
                        android:textColor="@color/fff8f9fc"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/memo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:text="-- --"
                        android:textColor="@color/ff222222"
                        android:textSize="14sp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"/>

                    <Button
                        android:id="@+id/copememo_bn"
                        android:layout_width="106.5dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/login_bn_bg"
                        android:gravity="center"
                        android:text="@string/b84"
                        android:textColor="@color/fff8f9fc"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="34.5dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="39dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/czts"
                            android:layout_marginTop="3dp"/>

                        <TextView
                            android:id="@+id/explain_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/rec2"
                            android:textColor="@color/ff8881a6"
                            android:textSize="11.5sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <ImageView
            android:id="@+id/cancle_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="20dp"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guanbi"

            />
    </LinearLayout>

</LinearLayout>