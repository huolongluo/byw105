<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">




    <LinearLayout
        android:id="@+id/llSuccessBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"

        android:background="@drawable/edit_add_bg"
        android:focusable="true"
    android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"

       >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/cancle_order1"
            android:textColor="@color/ff333333"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="12sp"
            android:textColor="@color/ff333333"
            android:text="@string/cancle_order1_warn"/>


        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="12sp"
            android:textColor="@color/ffb0adc2"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancle_tv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/otctrade_bg1"
                android:gravity="center"
                android:text="@string/b28"
                android:textColor="@color/ff333333"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/btnSure"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/otctrade_bg2"
                android:gravity="center"
                android:text="@string/b29"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    </RelativeLayout>
</RelativeLayout>