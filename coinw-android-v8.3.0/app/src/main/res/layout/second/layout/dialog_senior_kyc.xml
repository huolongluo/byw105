<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_20"
    android:background="@drawable/cortop10_solid_background_main">
    <TextView android:id="@+id/tvTitle"
        style="@style/TextView_18_000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/camera_b1"/>
    <TextView android:id="@+id/tvInfo"
        style="@style/TextView_14_333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_marginTop="@dimen/dp_size_16"
        tools:text="@string/kyc_info"/>
    <LinearLayout android:id="@+id/llAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_22"
        android:paddingTop="@dimen/dp_size_8"
        android:paddingBottom="@dimen/dp_size_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo">
        <ImageView android:id="@+id/ivAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_agree_select_6f6699"/>
        <TextView
            style="@style/TextView_12_6F698B"
            android:text="@string/agree_info"
            android:layout_marginLeft="@dimen/dp_size_8"/>
    </LinearLayout>
    <TextView android:id="@+id/tvCancel"
        style="@style/TextView_14_6f6699"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_size_45"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_size_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAgree"
        app:layout_constraintEnd_toStartOf="@+id/tvAgree"
        android:background="@drawable/cor22_stroke1_6f6699"
        android:text="@string/reject_certificate"/>
    <TextView android:id="@+id/tvAgree"
        style="@style/TextView_14_white"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_size_45"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_size_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCancel"
        app:layout_constraintTop_toBottomOf="@+id/llAgree"
        android:enabled="false"
        android:background="@drawable/sl_cor22_enable_6f6699"
        android:layout_marginStart="@dimen/dp_size_16"
        android:text="@string/agree_certificate"/>
</androidx.constraintlayout.widget.ConstraintLayout>