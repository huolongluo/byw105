<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:paddingStart="@dimen/margin_horizontal"
    android:paddingEnd="@dimen/margin_horizontal"
    android:orientation="vertical"
    tools:context="com.android.legend.ui.login.ResetLoginPwdThirdActivity">
    <include layout="@layout/inc_login_title"/>
    <include layout="@layout/inc_pwd_intensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="right"/>
    <com.android.legend.view.edittext.CommonEditText
        android:id="@+id/cetPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vPhone"
        app:widget_hint="@string/please_inpsw1"
        app:widget_margin_horizontal="@dimen/dp_2"
        app:widget_textSize="@dimen/sp_14"/>
    <View
        android:id="@+id/vPwd"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/sl_color_normal_e0e0e0_selected_accent"
        app:layout_constraintTop_toBottomOf="@+id/cetPwd" />
    <TextView
        android:id="@+id/tvPwdError"
        style="@style/TextView_12_main2"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        android:text="@string/str_pwd_tip" />
    <com.android.legend.view.edittext.CommonEditText
        android:id="@+id/cetPwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vPhone"
        app:widget_hint="@string/please_inpsw1"
        app:widget_margin_horizontal="@dimen/dp_2"
        app:widget_textSize="@dimen/sp_14"/>
    <View
        android:id="@+id/vPwd2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/sl_color_normal_e0e0e0_selected_accent"
        app:layout_constraintTop_toBottomOf="@+id/cetPwd" />
    <TextView
        android:id="@+id/tvPwdError2"
        style="@style/TextView_12_E65261"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        tools:text="@string/two_pwd_different" />
    <include layout="@layout/inc_login_btn"/>
</LinearLayout>