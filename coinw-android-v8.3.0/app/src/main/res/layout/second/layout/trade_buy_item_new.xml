<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@drawable/trade_buy_item_bg"
        android:clickable="true"
        android:gravity="center_vertical">
        <ProgressBar
            android:id="@+id/progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="1px"
            android:max="100"
            android:progress="1"
            android:progressDrawable="@drawable/buy_bg" />
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="1dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|left"
            android:text="--"
            android:textColor="@color/ff5a5670"
            android:textSize="11sp"
            android:visibility="gone"/>
        <com.legend.common.view.textview.DinproMediumTextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="--"
            android:textColor="@color/white"
            android:textSize="11sp" />
        <com.legend.common.view.textview.DinproMediumTextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_position"
            android:text="--"
            android:textColor="@color/drop"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>