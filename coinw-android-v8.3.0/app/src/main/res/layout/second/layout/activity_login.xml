<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_horizontal"
    android:paddingEnd="@dimen/margin_horizontal"
    android:orientation="vertical"
    android:background="@color/background_main"
    tools:context="com.android.legend.ui.login.LoginActivity">
    <include layout="@layout/inc_login_title"/>
    <include layout="@layout/inc_login_phone_email"/>
    <include layout="@layout/inc_login_btn"/>
    <LinearLayout  android:id="@+id/llRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_6"
        android:padding="@dimen/dp_10"
        >
        <TextView
            style="@style/TextView_14_main2"
            android:text="@string/no_account"/>
        <TextView
            style="@style/TextView_14_accent"
            android:text="@string/register_now"/>
    </LinearLayout>
    
</LinearLayout>