<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f80000000"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/cortop10_solid_background_main"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/bn5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:clickable="true"
            android:gravity="center">
            <TextView
                style="@style/TextView_14_accent"
                android:gravity="center"
                android:text="@string/all" />
        </LinearLayout>
        <View style="@style/Line_main"></View>
        <LinearLayout
            android:id="@+id/bn1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:clickable="true"
            android:gravity="center">
            <TextView
                style="@style/TextView_14_main2"
                android:gravity="center"
                android:text="@string/recharge_withdraw" />
        </LinearLayout>
        <View style="@style/Line_main"></View>
        <LinearLayout
            android:id="@+id/bn4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:clickable="true"
            android:gravity="center">
            <TextView
                style="@style/TextView_14_main2"
                android:gravity="center"
                android:text="@string/kt" />
        </LinearLayout>
        <View style="@style/Line_main"></View>
        <LinearLayout
            android:id="@+id/bn6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:clickable="true"
            android:gravity="center">
            <TextView
                style="@style/TextView_14_main2"
                android:gravity="center"
                android:text="@string/return_des" />
        </LinearLayout>
        <View style="@style/Line_main"></View>
        <LinearLayout
            android:id="@+id/bn7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:clickable="true"
            android:gravity="center">
            <TextView
                style="@style/TextView_14_main2"
                android:gravity="center"
                android:text="@string/manage_money" />
        </LinearLayout>
        <View
            style="@style/Line_main"
            android:layout_height="@dimen/dp_10"
            android:background="@color/background_gray"></View>
        <TextView
            android:id="@+id/bn3"
            style="@style/TextView_14_main2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="@string/cancle" />
    </LinearLayout>
</LinearLayout>