<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/background_main"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioB_1"
                style="@style/main_tab"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/sl_menu_home"
                android:checked="true"
                android:text="@string/maintab"/>

            <RadioButton
                android:id="@+id/radioB_2"
                style="@style/main_tab"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/sl_menu_market"
                android:text="@string/market"/>

            <RadioButton
                android:id="@+id/radioB_3"
                style="@style/main_tab"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/sl_menu_trade"
                android:text="@string/trade" />

            <RadioButton
                android:id="@+id/radioB_4"
                style="@style/main_tab"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/sl_menu_contract"
                android:text="@string/hy_tab" />

            <RadioButton
                android:id="@+id/radioB_5"
                style="@style/main_tab"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/sl_menu_assets"
                android:text="@string/finance"/>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>