<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/zhang_bn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom">
            <TextView
                android:id="@+id/textview1"
                style="@style/TextView_16_main_bold"
                android:textColor="@color/sl_color_normal_main2_selected_main"
                android:layout_centerHorizontal="true"
                android:text="@string/zhangfub" />
            <ImageView
                android:id="@+id/bn_imageview1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textview1"
                android:layout_marginTop="@dimen/dp_6"
                android:src="@drawable/bg_cor3_accent" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_new_coins"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_new_coins"
                style="@style/TextView_16_main2_bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/sl_color_normal_main2_selected_main"
                android:text="@string/str_new_coins" />
            <ImageView
                android:id="@+id/iv_new_coins_tag"
                android:layout_width="@dimen/dp_20"
                android:layout_height="3dp"
                android:layout_below="@+id/tv_new_coins"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_6"
                android:src="@drawable/bg_cor3_accent"
                android:visibility="invisible" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chengjiaoe_bn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_marginEnd="@dimen/dp_20">
            <TextView
                android:id="@+id/textview3"
                style="@style/TextView_16_main2_bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/sl_color_normal_main2_selected_main"
                android:text="@string/home_turnover" />
            <ImageView
                android:id="@+id/bn_imageview3"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:layout_below="@+id/textview3"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bg_cor3_accent"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
    <View
        style="@style/Line_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal">
        <TextView android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextView_12_main2"
            android:text="@string/str_name"/>

        <TextView android:id="@+id/tv_home_center"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:gravity="right"
            style="@style/TextView_12_main2"
            android:layout_centerHorizontal="true"
            android:paddingEnd="@dimen/dp_20"
            android:text="@string/last_price"/>
    
        <TextView android:id="@+id/tv_home_right"
            style="@style/TextView_12_main2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/str_chg"/>

    </LinearLayout>

    <!--涨幅榜-->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:divider="@null"
        android:scrollbars="none" />
</LinearLayout>