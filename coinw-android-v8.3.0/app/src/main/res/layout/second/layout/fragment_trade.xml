                                android:textColor="@color/ff8881a6"
                                android:textSize="12.5sp" />
                            <ImageView
                                android:id="@+id/tab2_2"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_alignLeft="@+id/tv12"
                                android:layout_alignRight="@+id/tv12"
