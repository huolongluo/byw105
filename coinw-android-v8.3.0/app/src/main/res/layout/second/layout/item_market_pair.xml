<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="huolongluo.byw.R" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_horizontal"
            android:paddingEnd="@dimen/margin_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1.4"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.legend.common.view.textview.DinproBoldTextView
                        android:id="@+id/tvLeftCoinName"
                        style="@style/TextView_16_main_bold"
                        android:singleLine="true"
                        tools:text="ETH" />
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvRightCoinName"
                        style="@style/TextView_10_8085889B"
                        android:singleLine="true"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/dp_1"
                        tools:text="/USDT" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llVol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.legend.common.view.textview.DinproMediumTextView
                        style="@style/TextView_10_main2"
                        android:gravity="left"
                        android:text="@string/cc62" />
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:layout_marginLeft="@dimen/dp_1"
                        android:id="@+id/tvVol"
                        style="@style/TextView_10_main2"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="456.124k" />
                    <TextView android:id="@+id/tvSelect"
                        style="@style/TextView_10_accent"
                        android:text="@string/new_coin_select"
                        android:background="@drawable/bg_cor2_stroke1_accent"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_1"
                        android:paddingRight="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center|right"
                android:paddingRight="@dimen/dp_20">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <com.legend.common.view.textview.DinproBoldTextView
                        android:id="@+id/tvPrice"
                        style="@style/TextView_16_main_bold"
                        android:layout_gravity="right"
                        android:singleLine="true"
                        tools:text="23442344.30" />
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvPricing"
                        style="@style/TextView_10_main2"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="right"
                        android:singleLine="true"
                        tools:text="Â¥14012131341.00" />
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.legend.common.view.textview.DinproMediumTextView
                    android:id="@+id/tvRate"
                    style="@style/TextView_14_white"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/btn_height"
                    android:layout_centerVertical="true"
                    app:theme_background="@{R.attr.bg_buy_btn}"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:text="--" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>