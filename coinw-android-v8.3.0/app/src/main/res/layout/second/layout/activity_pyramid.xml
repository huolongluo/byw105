<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_col"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/base_title"></include>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="28dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="@string/tjm"
                android:textColor="@color/white"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/uid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cope_tv"
                android:layout_width="67dp"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cope_bg"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/qr_code_iv"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/base_bg1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/friend_rl"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/rebate_bg3" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tjf"
                        android:textColor="@color/white"
                        android:textSize="12.5dp" />
                    <TextView
                        android:id="@+id/text2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="1000"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/money_rl"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rebate_bg" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yhe"
                        android:textColor="@color/ff8881a6"
                        android:textSize="12.5dp" />
                    <TextView
                        android:id="@+id/text4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="1000"
                        android:textColor="@color/ff222222"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <huolongluo.byw.view.NoScrollViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></huolongluo.byw.view.NoScrollViewPager>
    </LinearLayout>
</LinearLayout>