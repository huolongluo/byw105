<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/base_title"/>
            <TextView
                android:id="@+id/history_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/all_order"
                android:text="@string/cc61"
                android:textColor="?col_text_content"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/all_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="@string/all_trade"
                android:textColor="?col_text_title"
                android:textSize="15sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/current_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="@string/filtrate"
                    android:textColor="?col_text_title"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:src="?ic_arrow_down"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<include-->
            <!--android:id="@+id/net_errer_view"-->
            <!--layout="@layout/net_errer_view"-->
            <!--android:visibility="gone"-->
            <!--&gt;</include>-->
            <FrameLayout
                android:id="@+id/net_error_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_bg_white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:visibility="gone">
                <include layout="@layout/net_errer_view"></include>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <huolongluo.byw.widget.pulltorefresh.PullToRefreshListView
                    android:id="@+id/lv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="13dp"
                    android:scrollbars="none" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/saixuan_view"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/layout_tradeorder" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>