<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/animal_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@drawable/rise_bg"
        android:visibility="invisible"></View>
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_horizontal"
        android:paddingEnd="@dimen/margin_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.legend.common.view.textview.DinproBoldTextView
                    android:id="@+id/tv_name"
                    style="@style/TextView_16_main_bold"
                    android:singleLine="true"
                    tools:text="ETH" />
                <com.legend.common.view.textview.DinproMediumTextView
                    android:id="@+id/tv_name1"
                    style="@style/TextView_10_8085889B"
                    android:singleLine="true"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="bottom"
                    tools:text="/USDT" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center|right"
            android:paddingRight="@dimen/dp_20">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.legend.common.view.textview.DinproBoldTextView
                    android:id="@+id/tv_money"
                    style="@style/TextView_16_main_bold"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    tools:text="23442344.30" />
                <com.legend.common.view.textview.DinproMediumTextView
                    android:id="@+id/tv_money1"
                    style="@style/TextView_10_main2"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    tools:text="Â¥14012131341.00" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.legend.common.view.textview.DinproMediumTextView
                android:id="@+id/tv_rate"
                style="@style/TextView_14_white"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/btn_height"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_cor5_up"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="--"/>
        </FrameLayout>
    
    </LinearLayout>
</RelativeLayout>