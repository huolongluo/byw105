<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/dialog_shap_etf_tip"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_disclaimer_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/str_disclaimer"
            android:textColor="#333333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_iagree"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_shap_etf_tip"
            android:gravity="center"
            android:minWidth="150dp"
            android:paddingStart="2dp"
            android:paddingRight="2dp"
            android:text="@string/str_iagree"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:layout_above="@id/tv_iagree"
            android:layout_below="@id/tv_disclaimer_desc"
            android:layout_marginTop="10dp"
            android:keepScreenOn="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier='1.2'
                    android:text="@string/str_disclaimer_content"
                    android:textColor="#999999"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="fill_vertical"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier='1.2'
                    android:text="@string/str_risk_warning"
                    android:textColor="@color/color_FFFDC706"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier='1.2'
                    android:text="@string/str_risk_warning_01"
                    android:textColor="@color/color_FFFDC706"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier='1.2'
                    android:text="@string/str_risk_warning_02"
                    android:textColor="@color/color_FFFDC706"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="fill_vertical"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier='1.2'
                    android:text="@string/str_risk_warning_03"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>