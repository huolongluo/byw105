<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_size_12"
        android:layout_marginBottom="@dimen/dp_size_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_size_15"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvAccountSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/wealth_to_bdb"
                android:textColor="@color/light_text_content"
                android:textSize="14sp" />
            <com.legend.common.view.textview.DinproMediumTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_7"
                tools:text="2019-02-08 09:28:12"
                android:textColor="@color/color_C2C3CD"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout style="@style/BaseLinearLayoutVertical"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_size_15">
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="11"
                tools:text="10000USDT"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:textSize="16sp" />
    
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_7"
                tools:text="已完成"
                android:textColor="@color/accent_main"
                android:layout_gravity="right"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_20979797" />
</LinearLayout>