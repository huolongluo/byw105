<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="315dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/coinw_baike_pup"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView android:id="@+id/coinName_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.5dp"
            android:lines="1"
            android:text="@string/b55"
            android:textColor="@android:color/white"
            android:textSize="12.5sp" />
        <TextView android:id="@+id/coinName_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/coinName_tv1"
            android:layout_alignBottom="@+id/coinName_tv1"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="-2dp"
            android:layout_toRightOf="@+id/coinName_tv1"
            android:gravity="bottom"
            android:text="(--)"
            android:textColor="@android:color/white"
            android:textSize="9sp" />
        <TextView android:id="@+id/tv_close_explain"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16.5dp"
            android:background="@drawable/kline_bg"
            android:drawableLeft="@mipmap/kline_trade"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:text="@string/zjfb"
            android:textColor="@android:color/white"
            android:textSize="11.5sp" />
    </RelativeLayout>
    <ScrollView android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="19.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17.5dp"
                android:background="@color/ff322c57"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/faxd"
                    android:textColor="@color/ff7f77ae"
                    android:textSize="11sp" />
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/fxmax"
                    android:textColor="@color/ff7f77ae"
                    android:textSize="11sp" />
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/ltmax"
                    android:textColor="@color/ff7f77ae"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="19.5dp"
                android:layout_marginRight="17.5dp"
                android:background="@drawable/kline_bg11"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView android:id="@+id/issue_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="--"
                    android:textColor="@color/ff7f77ae"
                    android:textSize="11sp" />
                <TextView android:id="@+id/issue_total_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="--"
                    android:textColor="@color/ff7f77ae"
                    android:textSize="11sp" />
                <TextView android:id="@+id/circulate_total_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="--"
                    android:textColor="@color/ff7f77ae"
                    android:textSize="11sp" />
            </LinearLayout>
            <WebView android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="19dp"
                android:background="@color/ff1a1a2e"
                android:clickable="false"
                android:focusable="false"
                android:paddingTop="20dp"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="6dp"
        android:background="@color/ff2c2b40" />
    <View android:layout_width="match_parent"
        android:layout_height="43.5dp" />
</LinearLayout>