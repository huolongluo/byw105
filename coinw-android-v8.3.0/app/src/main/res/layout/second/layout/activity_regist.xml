<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/regist_base_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/login_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp"
            android:layout_marginTop="45.0dp"
            android:background="@drawable/login_bg3">
            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_bg1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="16dp"
                    android:layout_height="18.7dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_phone_0" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_phone"
                    android:text="@string/phone"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="21dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_email_1" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_email"
                    android:text="@string/email"
                    android:textColor="@color/ff8881a6" />
            </RelativeLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/text_google2_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/areaCode_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/areaCode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:lines="1"
                    android:text="+86"
                    android:textColor="@color/ff8881a6"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/areaCode_tv"
                    android:src="@drawable/xljt"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/ffb7b2c8"
                    ></View>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginRight="16.5dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/plea_in_phonum"
                    android:inputType="number"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/FF333333"
                    android:textColorHint="@color/ffb5b2c7"
                    android:textSize="13sp" />


                <ImageView
                    android:id="@+id/iv_clear_user"
                    android:layout_width="18dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/login_del" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/login_bn_bg"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size32" />


        <LinearLayout
            android:id="@+id/login_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"

            android:layout_marginTop="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/has"
                android:textColor="@color/ff8881a6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/ff222222"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>