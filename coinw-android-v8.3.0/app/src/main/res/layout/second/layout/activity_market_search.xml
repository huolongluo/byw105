<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">
    <LinearLayout android:id="@+id/llSearchEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_toLeftOf="@+id/tvCancel"
            android:layout_weight="1"
            android:background="@drawable/bg_cor15_background_tab">
            
            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:clickable="true"
                android:src="@mipmap/ic_home_search_gray" />
            
            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/search_iv"
                android:layout_toRightOf="@+id/search_iv"
                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/ssbz"
                android:inputType="text"
                android:lines="1"
                android:maxLength="10"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/text_main"
                android:textColorHint="@color/text_main2"
                android:textSize="12sp" />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/tvCancel"
            style="@style/TextView_14_accent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/cancle"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llHot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                style="@style/TextView_16_main"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/hotList" />
            <TextView
                style="@style/TextView_10_main2"
                android:layout_marginLeft="@dimen/dp_6"
                android:lines="1"
                android:text="@string/gxd" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_14">
            <RelativeLayout
                android:id="@+id/rltHot1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/margin_horizontal"
                android:visibility="invisible"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_cor2_background_tab"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvLeftCoinName1"
                        style="@style/TextView_14_main"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLength="5"
                        android:maxLines="1"
                        tools:text="BTCbbbaabbb" />
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvRightCoinName1"
                        style="@style/TextView_14_main"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLength="5"
                        android:maxLines="1"
                        tools:text="/USDT" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ontf" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rltHot2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_8"
                android:visibility="invisible"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_cor2_background_tab"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvLeftCoinName2"
                        style="@style/TextView_14_main"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLength="5"
                        android:maxLines="1"
                        tools:text="EOS" />
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvRightCoinName2"
                        style="@style/TextView_14_main"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLength="5"
                        android:maxLines="1"
                        tools:text="/USDT" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/twof" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rltHot3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/margin_horizontal"
                android:visibility="invisible"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_cor2_background_tab"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvLeftCoinName3"
                        style="@style/TextView_14_main"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLength="5"
                        android:maxLines="1"
                        tools:text="BTC" />
                    <com.legend.common.view.textview.DinproMediumTextView
                        android:id="@+id/tvRightCoinName3"
                        style="@style/TextView_14_main"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLength="5"
                        android:singleLine="true"
                        tools:text="/USDT" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/threef" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
