<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white2">

    <TextView
        android:id="@+id/tvDesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/task_des"
        android:textColor="@color/color_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDesContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_26"
        android:textColor="@color/color_8085889B"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDesTitle"
        tools:text="111111111111111" />


    <ImageView
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:src="@drawable/ic_close_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvCheckTask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_26"
        android:background="@drawable/sl_cor5_d4cfe6_enable_accent"
        android:gravity="center"
        android:text="@string/des_ok"
        android:textColor="@color/color_FEFEFC"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDesContent" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCheckTask" />


</androidx.constraintlayout.widget.ConstraintLayout>