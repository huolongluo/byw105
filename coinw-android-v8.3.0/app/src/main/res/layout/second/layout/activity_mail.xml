<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/inc_toolbar" />
    <huolongluo.byw.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent"></huolongluo.byw.widget.pulltorefresh.PullToRefreshListView>
    <include
        android:id="@+id/net_error_view"
        layout="@layout/net_errer_view"
        android:visibility="gone"></include>
</LinearLayout>