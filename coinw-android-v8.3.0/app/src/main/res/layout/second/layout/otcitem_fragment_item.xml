<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <LinearLayout
            android:id="@+id/head_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:minWidth="45dp">

                <TextView
                    android:id="@+id/namelog_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/otcname_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/onlineDot_iv"
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/otc_online"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="7sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@drawable/tag_otc_top"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="@string/str_top"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="elane"
                        android:textColor="@color/ff333333"
                        android:textSize="12.5sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/isVip_iv"
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:src="@mipmap/zs" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chengj"
                android:textColor="@color/ffb0adc2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/realAmount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="0000"
                android:textColor="@color/ff6f6699"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="13.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffe3e2e9"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chengjrate"
                android:textColor="@color/ffb0adc2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/completeOrderRate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="17dp"
                android:text="0000"
                android:textColor="@color/ff6f6699"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0eef6"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/b80"
                    android:textColor="@color/ffb0adc2"
                    android:textSize="11.5sp" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="1000"
                    android:textColor="@color/ff6f6699"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/coinName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="CNY"
                    android:textColor="@color/ff6f6699"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bank_iv"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/bank_cark" />

                <ImageView
                    android:id="@+id/alipay_iv"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/zfb" />

                <ImageView
                    android:id="@+id/wechat_iv"
                    android:layout_width="23dp"
                    android:layout_height="18.5dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/wx" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/xg"
                android:textColor="@color/ffb0adc2"
                android:textSize="11.5sp" />

            <TextView
                android:id="@+id/limit_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv1"
                android:text="2000-3000"
                android:textColor="@color/ff8881a6"
                android:textSize="11.5sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/number"
                android:textColor="@color/ffb0adc2"
                android:textSize="11.5sp" />

            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv2"
                android:text="00"
                android:textColor="@color/ff8881a6"
                android:textSize="11.5sp" />

            <TextView
                android:id="@+id/buy_tv"
                android:layout_width="53dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:background="@drawable/f6a659e_bg"
                android:gravity="center"
                android:text="@string/buy1"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/base_bg_white"></View>
</LinearLayout>