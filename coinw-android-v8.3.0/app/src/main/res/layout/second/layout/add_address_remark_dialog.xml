<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/regist_dialog_shap"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:text="@string/beizu"
                android:textColor="@color/ff222222"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tv3"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:layout_marginTop="33dp"
                android:background="@null"
                android:gravity="bottom|center_horizontal"
                android:hint="@string/inpmark"
                android:lines="1"
                android:maxLength="10"
                android:paddingBottom="5dp"
                android:paddingLeft="6dp"
                android:text=""
                android:textColor="@color/ff222222"
                android:textColorHint="@color/ffb5b2c7"
                android:textSize="16.5sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16.5dp"
                android:layout_marginRight="16.5dp"
                android:background="@color/ffb7b2c8"></View>

            <Button
                android:id="@+id/know_tv"
                android:layout_width="133dp"
                android:layout_height="36.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/login_bn_bg"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@android:color/white"
                android:textSize="14sp"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/cancle_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="20dp"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guanbi"

            />
    </LinearLayout>

</LinearLayout>