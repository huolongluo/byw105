<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/base_title"></include>
        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:scaleType="fitXY"
            android:src="@mipmap/default_image" />
        <TextView
            android:id="@+id/name_tv"
            style="@style/TextView_18_main"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:text="-- --" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="@dimen/dp_64"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item1"
                style="@style/TextView_14_main2"
                android:text="@string/number" />
            <com.legend.common.view.textview.DinproMediumTextView
                android:id="@+id/number_tv"
                style="@style/TextView_14_main"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_gravity="right"
                android:text="-- --" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item2"
                style="@style/TextView_14_main2"
                android:text="@string/state"/>
            <TextView
                android:id="@+id/state_tv"
                style="@style/TextView_14_main"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_gravity="right"
                android:text="-- --" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item3"
                style="@style/TextView_14_main2"
                android:text="@string/addre"/>
            <TextView
                android:id="@+id/address_tv"
                style="@style/TextView_14_main"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_gravity="right"
                android:text="-- --" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/dealID_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/TextView_14_main2"
                android:text="@string/dealID"/>
            <TextView
                android:id="@+id/dealID_tv"
                style="@style/TextView_14_main"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_gravity="right"
                android:text="-- --" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item4"
                style="@style/TextView_14_main2"
                android:text="@string/date" />
            <TextView
                android:id="@+id/date_tv"
                style="@style/TextView_14_main"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_gravity="right"
                android:text="-- --"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/dp_36"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/copeId_tv"
            style="@style/TextView_14_main2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_cor5_background_tab"
            android:gravity="center"
            android:text="@string/copy_id" />
        <Button
            android:id="@+id/browerOpen_tv"
            style="@style/TextView_14_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/bg_cor5_accent"
            android:gravity="center"
            android:text="@string/brower_sear" />
    </LinearLayout>
</RelativeLayout>