<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/base_col"></View>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="-3dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/base_title"></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/login_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="22.5dp"
                        android:text="@string/country"
                        android:textColor="@color/ff222222"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginLeft="16.5dp"
                        android:layout_marginRight="16.5dp"
                        android:background="@drawable/set_trade_psw_"
                        android:gravity="bottom"
                        android:lines="1"
                        android:maxLength="20"
                        android:paddingLeft="4.5dp"
                        android:paddingBottom="3dp"
                        android:text="@string/selcountry"
                        android:textColor="@color/ff222222"
                        android:textSize="17sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="22.5dp"
                    android:text="@string/Firstname"
                    android:textColor="@color/ff222222"
                    android:textSize="13sp" />
                <EditText
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="16.5dp"
                    android:layout_marginRight="16.5dp"
                    android:background="@drawable/set_trade_psw_"
                    android:gravity="bottom"
                    android:hint="@string/inp_name"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:paddingLeft="4.5dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/ff222222"
                    android:textColorHint="@color/ffb5b2c7"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="22.5dp"
                    android:text="@string/Lastname"
                    android:textColor="@color/ff222222"
                    android:textSize="13sp" />
                <EditText
                    android:id="@+id/xing_tv"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="16.5dp"
                    android:layout_marginRight="16.5dp"
                    android:background="@drawable/set_trade_psw_"
                    android:gravity="bottom"
                    android:hint="@string/inp_namex"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:paddingLeft="4.5dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/ff222222"
                    android:textColorHint="@color/ffb5b2c7"
                    android:textSize="13sp" />
                <RelativeLayout
                    android:id="@+id/select_card_type"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:clickable="true"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/card_id_tv"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16.5dp"
                        android:layout_marginRight="16.5dp"
                        android:background="@drawable/set_trade_psw_"
                        android:gravity="bottom"
                        android:lines="1"
                        android:maxLength="10"
                        android:paddingLeft="4.5dp"
                        android:paddingBottom="4dp"
                        android:text="@string/sfz"
                        android:textColor="@color/ff222222"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/card_id_tv"
                        android:layout_marginLeft="20dp"
                        android:text="@string/idtype"
                        android:textColor="@color/ff222222"
                        android:textSize="13sp" />
                    <ImageView
                        android:id="@+id/tv_flag"
                        android:layout_width="12dp"
                        android:layout_height="7dp"
                        android:layout_alignBottom="@id/card_id_tv"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/xl"
                        android:visibility="gone" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="22.5dp"
                    android:text="@string/idmnum"
                    android:textColor="@color/ff222222"
                    android:textSize="13sp"
                    android:visibility="gone" />
                <EditText
                    android:id="@+id/card_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="16.5dp"
                    android:layout_marginRight="16.5dp"
                    android:background="@drawable/set_trade_psw_"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="bottom"
                    android:hint="@string/ple_inonumid"
                    android:lines="1"
                    android:maxLength="50"
                    android:paddingLeft="4.5dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/ff222222"
                    android:textColorHint="@color/ffb5b2c7"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_to_sure"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="@dimen/dp_22"
                android:text="@string/overseas_identity_tips"
                android:textColor="@color/FF999999"
                android:textSize="@dimen/sp_12" />
            <Button
                android:id="@+id/btn_to_sure"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="@dimen/dp_36"
                android:background="@drawable/confirm_jb_bg"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
