<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="2018.12.44"
                    android:textColor="@color/ffb5b2c7"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="手续费 12 tbd"
                        android:textColor="@color/ff222222"
                        android:textSize="11.5sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tradeSum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:lines="1"
                    android:text="买入 12 bte"
                    android:textColor="@color/ffff5864"
                    android:textSize="11.5sp" />

                <TextView
                    android:id="@+id/return_fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:text="返0.0004 BTC "
                    android:textColor="@color/ff222222"
                    android:textSize="13.5dp" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/retuin_coin_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/fee_coins_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="手续费 12 tbd"
                android:textColor="@color/ff222222"
                android:textSize="11.5sp" />

            <TextView
                android:id="@+id/return_fee_coins_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:text="返0.0004 BTC "
                android:textColor="@color/ff222222"
                android:textSize="13.5dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ffd7dcea"></View>
    </LinearLayout>
</LinearLayout>