<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_videoView_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/videoControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liuzhongjun.videorecorddemo.view.MyVideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/play_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/start_" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/re_record"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_camera1"
            android:gravity="center"
            android:text="@string/camera_d6"
            android:textColor="#ffffff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/next_record"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_camera"
            android:gravity="center"
            android:text="@string/camera_d7"
            android:textColor="#ffffff"
            android:textSize="11sp" />
    </LinearLayout>

    <include
        android:id="@+id/include"
        layout="@layout/camera_base_title_01" />
</RelativeLayout>
