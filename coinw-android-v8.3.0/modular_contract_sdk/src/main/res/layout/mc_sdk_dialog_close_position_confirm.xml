<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mc_sdk_bg_bottom_dialog_r7"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mc_sdk_close_part_position_confirm"
            android:textColor="?col_text_title"
            android:textSize="@dimen/mc_sdk_txt_dialog_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?ic_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/mc_sdk_price"
            android:textColor="?col_text_content"
            android:textSize="@dimen/mc_sdk_txt_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/mc_sdk_contract_number"
            android:textColor="?col_text_content"
            android:textSize="@dimen/mc_sdk_txt_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price" />

        <TextView
            android:id="@+id/tv_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mc_sdk_price"
            android:textColor="?col_text_title"
            android:textSize="@dimen/mc_sdk_txt_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_price" />

        <TextView
            android:id="@+id/tv_count_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/mc_sdk_contract_number"
            android:textColor="?col_text_title"
            android:textSize="@dimen/mc_sdk_txt_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price" />

        <CheckBox
            android:id="@+id/cb_not_show"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:button="@drawable/mc_sdk_bg_cb"
            android:gravity="center"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_count" />

        <TextView
            android:id="@+id/view_trigger_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:drawablePadding="4dp"
            android:text="@string/mc_sdk_order_confirm_not_show"
            android:textColor="?col_text_content"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/cb_not_show"
            app:layout_constraintLeft_toRightOf="@id/cb_not_show"
            app:layout_constraintTop_toTopOf="@id/cb_not_show" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:background="?bg_action_btn_accent"
            android:text="@string/mc_sdk_confirm"
            android:textColor="?col_text_on_button"
            app:layout_constraintTop_toBottomOf="@id/cb_not_show" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>