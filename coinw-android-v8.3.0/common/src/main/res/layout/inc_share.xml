<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/background_main"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.5dp"
            android:text="@string/share"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/wechat_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ssdk_oks_classic_wechat" />
            <TextView
                style="@style/TextView_14_main2"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/wchat_friend" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/friend_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ssdk_oks_classic_wechatmoments" />
            <TextView
                style="@style/TextView_14_main2"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/pyq" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qq_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ssdk_oks_classic_qq" />
            <TextView
                style="@style/TextView_14_main2"
                android:layout_marginTop="@dimen/dp_6"
                android:text="QQ" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/message_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@mipmap/message" />
            <TextView
                style="@style/TextView_14_main2"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/short_msg" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/savePng_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@mipmap/save_png" />
            <TextView
                style="@style/TextView_14_main2"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/save_png" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/more_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:scaleType="fitXY"
                android:src="@mipmap/more" />
            <TextView
                style="@style/TextView_14_main2"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/more" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvCancel"
        style="@style/TextView_16_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/cancle" />
</LinearLayout>