<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_app_upgrading"
    android:paddingLeft="32dp"
    android:paddingTop="28dp"
    android:paddingRight="32dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            style="@style/TextView_13_3C3C3C_bold"
            android:text="@string/upgrading" />

        <TextView
            android:id="@+id/tv_progress"
            style="@style/TextView_13_3C3C3C_bold"
            android:text="0%" />

        <TextView
            style="@style/TextView_13_3C3C3C_bold"
            android:text=")" />
    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar_horizontal"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@id/versionchecklib_loading_dialog_cancel"
        style="@style/TextView_13_484C9B_bold"
        android:text="@string/upgrade_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"/>
</LinearLayout>